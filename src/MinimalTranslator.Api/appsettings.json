{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "InMemorySQLiteDatabase": "DataSource=file::memory:?cache=shared",
    "PosgreSqlDatabase": "{secret}"
  },

  "AzureTranslator": {
    "Http": {
      "Uri": "https://api.cognitive.microsofttranslator.com/",
      "Region": "westeurope",
      "LanguageRecognitionScoreThreshold": "0.60",
      "Key": "{secret}"
    }
  },

  "Language": "es",

  "AllowedHosts": "*"
}
